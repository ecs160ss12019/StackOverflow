<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/overbackground"
    tools:context="com.stackoverflow.malwareinvaders.main_functions.GameoverPop">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/arcadeclassic"
        android:text="Build your user profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorOrgange" />

    <TextView
        android:id="@+id/textView2"
        android:fontFamily="@font/arcadeclassic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="50dp"
        android:text="Please  enter  your  name: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorOrgange" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arcadeclassic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:inputType="textPersonName">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:fontFamily="@font/arcadeclassic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Submit"
        android:textSize="20sp"
        android:background="@drawable/button"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button2"
        android:fontFamily="@font/arcadeclassic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="71dp"
        android:background="@drawable/button"
        android:text="Start Game"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button3"
        android:fontFamily="@font/arcadeclassic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="71dp"
        android:background="@drawable/button"
        android:text="Learder Board"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />


</RelativeLayout>
