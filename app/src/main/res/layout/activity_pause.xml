<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stackoverflow.malwareinvaders.main_functions.ActivityPause"
    android:background="@drawable/codebackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO THE GAME"
        android:layout_marginTop="100dp"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/button"
        android:layout_alignParentTop="@+id/imageView"
        android:textColor="#ffff"
        android:elevation="0dp"
        android:text="Continue Game" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/button"
        android:layout_alignParentTop="@+id/buttonContinue"
        android:textColor="#ffff"
        android:elevation="0dp"
        android:text="Restart Game" />

</RelativeLayout>
